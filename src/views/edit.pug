extends base.pug

block content
  h4 Update Video
  form(method="POST") 
    input(name="title", placeholder="Video Title", value=video.title, required)
    input(name="description", placeholder="Description", require, type="text", minlength= 20, value= video.description)
    input(name="hashtags", placeholder="Hashtags, separated by comma.", require, type="text", value= video.hashtags.join())
    input(value="Save", type="Submit")


